def print_options():
    print("With no memory you found yourself in the middle of town :")
    print("1. Head to the tavern")
    print("2. Go to bed")
    print("3. Head outside the town")
    print("4. Ask around")
    print("5. Stand around for a while")
    print("0. Exit")


def main():
    while True:
        print_options()
        user_input = input("Enter the number of your choice: ")

        if user_input == "1":
            print("You chose Option 1.")
        elif user_input == "2":
            print("You chose Option 2.")
        elif user_input == "3":
            print("You chose Option 3.")
        elif user_input == "4":
            print("You chose Option 4.")
        elif user_input == "5":
            print("You chose Option 5.")
        elif user_input == "0":
            print("Exiting the program. Goodbye!")
            break
        else:
            print("Invalid option. Please select a valid number from the list.")


if __name__ == "__main__":
    main()
